@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Detalle del Curso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Nombre</h3>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código</dt>
                <dd class="col-sm-9">@Model.Codigo</dd>

                <dt class="col-sm-3">Créditos</dt>
                <dd class="col-sm-9">@Model.Creditos</dd>

                <dt class="col-sm-3">Cupo Máximo</dt>
                <dd class="col-sm-9">@Model.CupoMaximo</dd>

                <dt class="col-sm-3">Horario</dt>
                <dd class="col-sm-9">@Model.HorarioInicio.ToString(@"hh\:mm") - @Model.HorarioFin.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Volver al catálogo
                </a>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Matriculas" asp-action="Inscribirse" method="post">
                        <input type="hidden" name="cursoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-success">Inscribirse</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">
                        Inicia sesión para inscribirte
                    </a>
                }
            </div>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
</div>